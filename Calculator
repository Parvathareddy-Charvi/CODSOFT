# include <iostream>
using namespace std;

int main() {

  char ch;
  float m,n;

  cout << "Enter a operator: +, -, *, / : ";
  cin >> ch;

  cout << "Enter two operands: ";
  cin >> m >> n;

  switch(ch) {

    case '+':
      cout << m << " + " << n << " = " << m + n;
      break;

    case '-':
      cout << m << " - " << n << " = " << m - n;
      break;

    case '*':
      cout << m << " * " << n << " = " << m * n;
      break;

    case '/':
      cout << m << " / " << n << " = " << m / n;
      break;

    default:
      cout << "Error! operator is not correct";
      break;
  }

  return 0;
}
